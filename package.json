  "dependencies": {
    "express": "^4.17.1",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "node-fetch": "^2.6.1",
    "telegraf": "^3.38.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "concurrently": "^5.3.0",
    "typescript": "^4.1.2"
  },
